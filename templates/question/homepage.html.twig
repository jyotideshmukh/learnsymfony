{% extends 'base.html.twig' %}
{% block title %}
    <h1> All the questions</h1>
{% endblock %}

{% block body %}

    {% for question in questions %}
        <div class="card mb-5">
            <div class="card-header">
                {{ question.name }}
                <a href="{{ path('app_question_answer',{'slug' :  question.slug }) }}">
                    Show
                </a>

            </div>
            <div class="card-body">
                {{ question.question }}
            </div>
            <div class="card-footer">
                {{ question.askedAt | ago }}
            </div>
            <div>

            </div>
        </div>
    {% endfor %}
{% endblock %}